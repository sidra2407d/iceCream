
@{
    ViewData["Title"] = "receipe";
}

<section class="hero-section" id="home">
    <div class="strawberries-bg"></div>
    <div class="left-circle"></div>

    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content" data-aos="fade-right">
                    <h1 class="hero-title logo-font">Sweet Recipes</h1>
                    <h2 class="hero-subtitle">Create Magic at Home with Our <span class="logo-font" style="color: var(--secondary);">Signature Recipes</span></h2>
                    <p class="lead mb-4">Explore our collection of 50+ delicious ice cream recipes. From classic favorites to creative innovations, make your own ice cream magic at home!</p>

                    <div class="recipe-highlights mb-4">
                        <span class="recipe-tag free-tag"><i class="fas fa-gift"></i> 30+ Free Recipes</span>
                        <span class="recipe-tag premium-tag"><i class="fas fa-crown"></i> 20+ Premium Recipes</span>
                        <span class="recipe-tag new-tag"><i class="fas fa-bolt"></i> 5 New This Week</span>
                    </div>

                    <div class="mb-4">
                        <a href="#recipe-grid" class="btn btn-primary">
                            <i class="fas fa-utensils me-2"></i> Explore Free Recipes
                        </a>
                        <a href="#premium-section" class="btn btn-secondary">
                            <i class="fas fa-crown me-2"></i> Premium Collection
                        </a>
                    </div>

                    <div class="recipe-stats">
                        <div class="stat-item">
                            <i class="fas fa-ice-cream stat-icon"></i>
                            <div class="stat-number">50+</div>
                            <div class="stat-label">Recipes</div>
                        </div>
                        <div class="stat-item">
                            <i class="fas fa-unlock stat-icon"></i>
                            <div class="stat-number">30</div>
                            <div class="stat-label">Free</div>
                        </div>
                        <div class="stat-item">
                            <i class="fas fa-crown stat-icon"></i>
                            <div class="stat-number">20</div>
                            <div class="stat-label">Premium</div>
                        </div>
                        <div class="stat-item">
                            <i class="fas fa-star stat-icon"></i>
                            <div class="stat-number">4.8</div>
                            <div class="stat-label">Rating</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="recipe-circle" data-aos="fade-left" data-aos-delay="300">
                    <div class="circle-decoration"></div>

                    <div class="recipe-image-container">
                        <img src="https://images.unsplash.com/photo-1563805042-7684c019e1cb?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80"
                             alt="Recipe Preview"
                             class="recipe-image"
                             id="main-recipe-image">
                        <div class="recipe-badge free-badge">FREE</div>
                    </div>

                    <div class="recipe-dots">
                        <div class="recipe-dot recipe-dot-1" data-type="all">
                            <i class="fas fa-utensils"></i>
                        </div>
                        <div class="recipe-dot recipe-dot-2" data-type="free">
                            <i class="fas fa-gift"></i>
                        </div>
                        <div class="recipe-dot recipe-dot-3" data-type="premium">
                            <i class="fas fa-crown"></i>
                        </div>
                        <div class="recipe-dot recipe-dot-4" data-type="vegan">
                            <i class="fas fa-leaf"></i>
                        </div>
                        <div class="recipe-dot recipe-dot-5" data-type="no-churn">
                            <i class="fas fa-blender"></i>
                        </div>
                        <div class="recipe-dot recipe-dot-6" data-type="seasonal">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Recipe Filter Section -->
<section class="filter-section" data-aos="fade-up">
    <div class="container">
        <div class="filter-container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="filter-title mb-0">Filter Recipes</h3>
                <div class="filter-stats">
                    <span class="filter-stat-item"><i class="fas fa-gift text-success"></i> Free: 30</span>
                    <span class="filter-stat-item"><i class="fas fa-crown text-warning"></i> Premium: 20</span>
                </div>
            </div>
            <div class="filter-buttons">
                <button class="filter-btn active" data-filter="all">All Recipes</button>
                <button class="filter-btn" data-filter="free">
                    <i class="fas fa-gift me-1"></i> Free
                </button>
                <button class="filter-btn" data-filter="premium">
                    <i class="fas fa-crown me-1"></i> Premium
                </button>
                <button class="filter-btn" data-filter="classic">Classic</button>
                <button class="filter-btn" data-filter="vegan">Vegan</button>
                <button class="filter-btn" data-filter="no-churn">No-Churn</button>
                <button class="filter-btn" data-filter="seasonal">Seasonal</button>
                <button class="filter-btn" data-filter="easy">Easy</button>
                <button class="filter-btn" data-filter="medium">Medium</button>
                <button class="filter-btn" data-filter="hard">Hard</button>
            </div>
        </div>
    </div>
</section>

<!-- Recipe Grid Section -->
<section class="recipe-section" id="recipe-grid">
    <div class="container">
        <div class="section-header mb-5">
            <h2 class="section-title" data-aos="fade-up">Featured Free Recipes</h2>
            <p class="text-center" data-aos="fade-up">Enjoy these delicious recipes absolutely free! Perfect for beginners and ice cream lovers</p>
        </div>

        <div class="row g-4" id="recipes-container">
            <!-- Recipe cards will be generated by JavaScript -->
        </div>

        <div class="text-center mt-5" data-aos="fade-up">
            <button class="btn btn-primary load-more-btn">
                <i class="fas fa-plus-circle me-2"></i> Load More Free Recipes
            </button>
        </div>
    </div>
</section>

<!-- Premium Recipes Section -->
<section class="premium-section" id="premium-section" data-aos="fade-up">
    <div class="premium-gradient">
        <div class="container">
            <div class="premium-header">
                <div class="premium-badge">
                    <i class="fas fa-crown"></i> PREMIUM COLLECTION
                </div>
                <h2 class="section-title">Exclusive Premium Recipes</h2>
                <p class="text-center mb-5">Unlock our secret recipes, professional techniques, and advanced tutorials</p>
            </div>

            <div class="row g-4" id="premium-recipes-container">
                <!-- Premium recipe cards will be generated by JavaScript -->
            </div>

            <div class="premium-membership-card mt-5" data-aos="fade-up">
                <div class="row align-items-center">
                    <div class="col-lg-8">
                        <h3 class="membership-title"><i class="fas fa-gem me-2"></i> Get All Premium Recipes</h3>
                        <p class="membership-desc">Unlock all 20+ premium recipes, monthly new recipes, and professional tutorials</p>
                        <ul class="membership-features">
                            <li><i class="fas fa-check-circle"></i> Access to all premium recipes</li>
                            <li><i class="fas fa-check-circle"></i> New recipes added monthly</li>
                            <li><i class="fas fa-check-circle"></i> Video tutorials & masterclasses</li>
                            <li><i class="fas fa-check-circle"></i> Priority recipe requests</li>
                        </ul>
                    </div>
                    <div class="col-lg-4 text-center">
                        <div class="membership-price">
                            <span class="price-old">$49.99</span>
                            <span class="price-new">$29.99/month</span>
                        </div>
                        <a href="subscription.html" class="btn btn-premium btn-lg mt-3">
                            <i class="fas fa-gem me-2"></i> Get Premium Access
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Recipe Comparison -->
<section class="comparison-section" data-aos="fade-up">
    <div class="container">
        <h2 class="section-title">Free vs Premium Recipes</h2>
        <div class="row">
            <div class="col-lg-6">
                <div class="comparison-card free-comparison">
                    <div class="comparison-header">
                        <h4><i class="fas fa-gift"></i> Free Recipes</h4>
                        <div class="comparison-price">$0</div>
                    </div>
                    <ul class="comparison-features">
                        <li><i class="fas fa-check text-success"></i> Basic recipes for beginners</li>
                        <li><i class="fas fa-check text-success"></i> Classic flavors</li>
                        <li><i class="fas fa-check text-success"></i> Step-by-step instructions</li>
                        <li><i class="fas fa-times text-muted"></i> Professional techniques</li>
                        <li><i class="fas fa-times text-muted"></i> Secret recipes</li>
                        <li><i class="fas fa-times text-muted"></i> Video tutorials</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="comparison-card premium-comparison">
                    <div class="comparison-header">
                        <h4><i class="fas fa-crown"></i> Premium Recipes</h4>
                        <div class="comparison-price">From $2.99</div>
                    </div>
                    <ul class="comparison-features">
                        <li><i class="fas fa-check text-warning"></i> Advanced & secret recipes</li>
                        <li><i class="fas fa-check text-warning"></i> Professional techniques</li>
                        <li><i class="fas fa-check text-warning"></i> Video masterclasses</li>
                        <li><i class="fas fa-check text-warning"></i> Ingredient substitutions</li>
                        <li><i class="fas fa-check text-warning"></i> Troubleshooting guides</li>
                        <li><i class="fas fa-check text-warning"></i> Monthly new recipes</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Tips & Tricks Section -->
<section class="tips-section" data-aos="fade-up">
    <div class="container">
        <h2 class="section-title">Pro Tips & Tricks</h2>
        <div class="row">
            <div class="col-lg-4 mb-4" data-aos="fade-up" data-aos-delay="100">
                <div class="tip-card">
                    <div class="tip-icon">
                        <i class="fas fa-temperature-low"></i>
                    </div>
                    <h4>Temperature Control</h4>
                    <p>Always chill your mixture thoroughly before churning for creamier results.</p>
                </div>
            </div>
            <div class="col-lg-4 mb-4" data-aos="fade-up" data-aos-delay="200">
                <div class="tip-card">
                    <div class="tip-icon">
                        <i class="fas fa-weight"></i>
                    </div>
                    <h4>Proper Measurements</h4>
                    <p>Use a kitchen scale for precise measurements of ingredients.</p>
                </div>
            </div>
            <div class="col-lg-4 mb-4" data-aos="fade-up" data-aos-delay="300">
                <div class="tip-card">
                    <div class="tip-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <h4>Patience is Key</h4>
                    <p>Allow ice cream to ripen in the freezer for 2-4 hours after churning.</p>
                </div>
            </div>
        </div>
    </div>
</section>


