
@{
    ViewData["Title"] = "Feedback";
}

<!-- Hero Section with Interactive Flavor Circle -->
<section class="hero-section" id="home">
    <div class="strawberries-bg"></div>
    <div class="left-circle"></div>

    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content" data-aos="fade-right">
                    <h1 class="hero-title logo-font">Creamy Bar</h1>
                    <h2 class="hero-subtitle">Enjoy Your <span class="logo-font" style="color: var(--secondary);">Creamy Bite</span></h2>
                    <p class="lead mb-4">Indulge in our handcrafted, artisanal ice creams made with the finest natural ingredients and a whole lot of love.</p>

                    <div class="flavor-text" id="current-flavor">
                        Today's Special: <span id="flavor-name">Chocolate Dream</span>
                    </div>

                    <div class="mb-4">
                        <a href="#" class="btn btn-primary">
                            <i class="fas fa-ice-cream me-2"></i> Try It Now
                        </a>
                        <a href="#flavors" class="btn btn-secondary">
                            <i class="fas fa-list me-2"></i> All Flavors
                        </a>
                    </div>

                    <div class="flavor-indicators" id="flavor-indicators">
                        <!-- Flavor indicators will be added by JavaScript -->
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="flavor-circle" data-aos="fade-left" data-aos-delay="300">
                    <div class="circle-decoration"></div>

                    <img src="https://images.unsplash.com/photo-1563805042-7684c019e1cb?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80"
                         alt="Ice Cream"
                         class="flavor-image"
                         id="main-flavor-image">

                    <div class="flavor-dots">
                        <div class="flavor-dot flavor-dot-1" data-flavor="chocolate">
                            <i class="fas fa-cookie-bite"></i>
                        </div>
                        <div class="flavor-dot flavor-dot-2" data-flavor="strawberry">
                            <i class="fas fa-strawberry"></i>
                        </div>
                        <div class="flavor-dot flavor-dot-3" data-flavor="vanilla">
                            <i class="fas fa-ice-cream"></i>
                        </div>
                        <div class="flavor-dot flavor-dot-4" data-flavor="blueberry">
                            <i class="fas fa-blender"></i>
                        </div>
                        <div class="flavor-dot flavor-dot-5" data-flavor="mint">
                            <i class="fas fa-leaf"></i>
                        </div>
                        <div class="flavor-dot flavor-dot-6" data-flavor="caramel">
                            <i class="fas fa-candy-cane"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Feedback Hero Section -->
<section class="feedback-hero-section">
    <div class="strawberries-bg"></div>
    <div class="left-circle"></div>

    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-80">
            <div class="col-lg-10 col-xl-8">
                <div class="feedback-container" data-aos="zoom-in" data-aos-duration="800">
                    <div class="feedback-header text-center">
                        <h1 class="logo-font" style="color: var(--primary);">Share Your Thoughts</h1>
                        <p class="text-muted">We value your feedback to make CreamyBar even better!</p>
                        <div class="rating-display mt-3">
                            <div class="average-rating">
                                <span class="stars">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star-half-alt"></i>
                                </span>
                                <span class="rating-text">4.5/5.0 from 1,234 reviews</span>
                            </div>
                        </div>
                    </div>

                    <div class="feedback-body">
                        <form id="feedbackForm" class="feedback-form">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group floating-label">
                                        <input type="text" id="name" class="form-control" required>
                                        <label for="name">Full Name</label>
                                        <div class="input-icon">
                                            <i class="fas fa-user"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group floating-label">
                                        <input type="email" id="email" class="form-control" required>
                                        <label for="email">Email Address</label>
                                        <div class="input-icon">
                                            <i class="fas fa-envelope"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group floating-label">
                                <input type="text" id="subject" class="form-control" required>
                                <label for="subject">Feedback Subject</label>
                                <div class="input-icon">
                                    <i class="fas fa-tag"></i>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label">What best describes your feedback?</label>
                                <div class="feedback-categories">
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="feedbackType" id="suggestion" value="suggestion" checked>
                                        <label class="form-check-label" for="suggestion">
                                            <i class="fas fa-lightbulb me-1"></i> Suggestion
                                        </label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="feedbackType" id="complaint" value="complaint">
                                        <label class="form-check-label" for="complaint">
                                            <i class="fas fa-exclamation-circle me-1"></i> Issue/Complaint
                                        </label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="feedbackType" id="praise" value="praise">
                                        <label class="form-check-label" for="praise">
                                            <i class="fas fa-heart me-1"></i> Praise
                                        </label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="feedbackType" id="other" value="other">
                                        <label class="form-check-label" for="other">
                                            <i class="fas fa-ellipsis-h me-1"></i> Other
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label">Overall Rating</label>
                                <div class="star-rating">
                                    <input type="radio" id="star5" name="rating" value="5">
                                    <label for="star5" title="5 stars">
                                        <i class="fas fa-star"></i>
                                    </label>
                                    <input type="radio" id="star4" name="rating" value="4">
                                    <label for="star4" title="4 stars">
                                        <i class="fas fa-star"></i>
                                    </label>
                                    <input type="radio" id="star3" name="rating" value="3">
                                    <label for="star3" title="3 stars">
                                        <i class="fas fa-star"></i>
                                    </label>
                                    <input type="radio" id="star2" name="rating" value="2">
                                    <label for="star2" title="2 stars">
                                        <i class="fas fa-star"></i>
                                    </label>
                                    <input type="radio" id="star1" name="rating" value="1">
                                    <label for="star1" title="1 star">
                                        <i class="fas fa-star"></i>
                                    </label>
                                </div>
                            </div>

                            <div class="form-group floating-label">
                                <textarea id="message" class="form-control" rows="5" required></textarea>
                                <label for="message">Your Feedback Message</label>
                                <div class="input-icon">
                                    <i class="fas fa-comment"></i>
                                </div>
                                <div class="char-count">
                                    <span id="charCount">0</span>/500 characters
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label">What did you try? (Select all that apply)</label>
                                <div class="flavor-checkboxes">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="chocolate" name="flavors[]" value="chocolate">
                                        <label class="form-check-label" for="chocolate">
                                            <i class="fas fa-cookie-bite me-1"></i> Chocolate Dream
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="strawberry" name="flavors[]" value="strawberry">
                                        <label class="form-check-label" for="strawberry">
                                            <i class="fas fa-strawberry me-1"></i> Strawberry Bliss
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="vanilla" name="flavors[]" value="vanilla">
                                        <label class="form-check-label" for="vanilla">
                                            <i class="fas fa-ice-cream me-1"></i> Vanilla Supreme
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="mint" name="flavors[]" value="mint">
                                        <label class="form-check-label" for="mint">
                                            <i class="fas fa-leaf me-1"></i> Mint Chocolate Chip
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="caramel" name="flavors[]" value="caramel">
                                        <label class="form-check-label" for="caramel">
                                            <i class="fas fa-candy-cane me-1"></i> Caramel Swirl
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-check mb-4">
                                <input type="checkbox" class="form-check-input" id="subscribeNews" checked>
                                <label class="form-check-label" for="subscribeNews">Subscribe to our newsletter for updates</label>
                            </div>

                            <div class="form-check mb-4">
                                <input type="checkbox" class="form-check-input" id="contactBack">
                                <label class="form-check-label" for="contactBack">You may contact me about this feedback</label>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 feedback-btn">
                                <span class="btn-text">Submit Feedback</span>
                                <div class="btn-loader d-none">
                                    <div class="spinner-border spinner-border-sm" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                </div>
                            </button>

                            <div class="text-center mt-4">
                                <p class="small text-muted mb-0">Your feedback helps us improve our products and services. Thank you!</p>
                            </div>
                        </form>
                    </div>

                    <div class="feedback-footer text-center mt-4">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <div class="stat-item">
                                    <i class="fas fa-comments fa-2x mb-2" style="color: var(--primary);"></i>
                                    <h4>1,234+</h4>
                                    <p>Feedback Received</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="stat-item">
                                    <i class="fas fa-thumbs-up fa-2x mb-2" style="color: var(--secondary);"></i>
                                    <h4>92%</h4>
                                    <p>Positive Reviews</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="stat-item">
                                    <i class="fas fa-bolt fa-2x mb-2" style="color: var(--accent);"></i>
                                    <h4>24h</h4>
                                    <p>Avg. Response Time</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

