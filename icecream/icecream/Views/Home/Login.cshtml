
@{
    ViewData["Title"] = "Login";
}

<section class="hero-section" id="home">
    <div class="strawberries-bg"></div>
    <div class="left-circle"></div>

    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content" data-aos="fade-right">
                    <h1 class="hero-title logo-font">Creamy Bar</h1>
                    <h2 class="hero-subtitle">Enjoy Your <span class="logo-font" style="color: var(--secondary);">Creamy Bite</span></h2>
                    <p class="lead mb-4">Indulge in our handcrafted, artisanal ice creams made with the finest natural ingredients and a whole lot of love.</p>

                    <div class="flavor-text" id="current-flavor">
                        Today's Special: <span id="flavor-name">Chocolate Dream</span>
                    </div>

                    <div class="mb-4">
                        <a href="#" class="btn btn-primary">
                            <i class="fas fa-ice-cream me-2"></i> Try It Now
                        </a>
                        <a href="#flavors" class="btn btn-secondary">
                            <i class="fas fa-list me-2"></i> All Flavors
                        </a>
                    </div>

                    <div class="flavor-indicators" id="flavor-indicators">
                        <!-- Flavor indicators will be added by JavaScript -->
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="flavor-circle" data-aos="fade-left" data-aos-delay="300">
                    <div class="circle-decoration"></div>

                    <img src="https://images.unsplash.com/photo-1563805042-7684c019e1cb?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80"
                         alt="Ice Cream"
                         class="flavor-image"
                         id="main-flavor-image">

                    <div class="flavor-dots">
                        <div class="flavor-dot flavor-dot-1" data-flavor="chocolate">
                            <i class="fas fa-cookie-bite"></i>
                        </div>
                        <div class="flavor-dot flavor-dot-2" data-flavor="strawberry">
                            <i class="fas fa-strawberry"></i>
                        </div>
                        <div class="flavor-dot flavor-dot-3" data-flavor="vanilla">
                            <i class="fas fa-ice-cream"></i>
                        </div>
                        <div class="flavor-dot flavor-dot-4" data-flavor="blueberry">
                            <i class="fas fa-blender"></i>
                        </div>
                        <div class="flavor-dot flavor-dot-5" data-flavor="mint">
                            <i class="fas fa-leaf"></i>
                        </div>
                        <div class="flavor-dot flavor-dot-6" data-flavor="caramel">
                            <i class="fas fa-candy-cane"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Login Hero Section -->
<section class="login-hero-section">
    <div class="strawberries-bg"></div>
    <div class="left-circle"></div>

    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-80">
            <div class="col-lg-8">
                <div class="login-container" data-aos="zoom-in" data-aos-duration="800">
                    <div class="login-header text-center">
                        <h1 class="logo-font" style="color: var(--primary);">Welcome Back!</h1>
                        <p class="text-muted">Sign in to your CreamyBar account</p>
                    </div>

                    <div class="login-body">
                        
                        <form id="loginForm" class="login-form">
                            <div class="form-group floating-label">
                                <input type="email" id="email" class="form-control" required>
                                <label for="email">Email Address</label>
                                <div class="input-icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                            </div>

                            <div class="form-group floating-label">
                                <input type="password" id="password" class="form-control" required>
                                <label for="password">Password</label>
                                <div class="input-icon">
                                    <i class="fas fa-lock"></i>
                                </div>
                                <div class="password-toggle">
                                    <i class="fas fa-eye"></i>
                                </div>
                            </div>

                            <div class="form-check mb-4">
                                <input type="checkbox" class="form-check-input" id="rememberMe">
                                <label class="form-check-label" for="rememberMe">Remember me</label>
                                <a href="#" class="forgot-password float-end">Forgot Password?</a>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 login-btn">
                                <span class="btn-text">Login</span>
                                <div class="btn-loader d-none">
                                    <div class="spinner-border spinner-border-sm" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                </div>
                            </button>

                            <div class="divider my-4">
                                <span>or continue with</span>
                            </div>

                            <div class="social-login">
                                <button type="button" class="btn btn-google">
                                    <i class="fab fa-google"></i> Google
                                </button>
                                <button type="button" class="btn btn-facebook">
                                    <i class="fab fa-facebook-f"></i> Facebook
                                </button>
                            </div>

                            <div class="text-center mt-4">
                                <p class="mb-0">Don't have an account? <a asp-controller="Users" asp-action="Create" class="register-link">Sign up here</a></p>
                            </div>
                        </form>
                    </div>

                    <div class="login-footer text-center">
                        <p class="small text-muted">By continuing, you agree to our <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

